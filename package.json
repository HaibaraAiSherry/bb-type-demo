{
  "name": "bb-typewrite",
  "description": "BB打字练习平台",
  "packageManager": ">=pnpm@7.5.0",
  "engines": {
    "node": ">=17.0.0"
  },
  "scripts": {
    "type-check": "esno ./scripts/type-check.ts",
    "web:dev": "cd packages/web && pnpm dev",
    "desktop:dev": "cd packages/desktop && pnpm dev",
    "lint": "npm run type-check && lint-staged",
    "clean": "rimraf ./node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/types": "^17.0.0",
    "@mimi-utils/types": "^0.0.3",
    "@type-challenges/utils": "^0.1.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esno": "^0.16.3",
    "execa": "^6.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "react": "^18.2.0",
    "react-dev-inspector": "^1.8.1",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "ts-toolbelt": "^9.6.0",
    "type-fest": "^2.16.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-svgr": "^2.2.0",
    "vitest": "^0.16.0"
  },
  "dependencies": {
    "mitt": "^3.0.0",
    "ultra-icon": "^0.0.8"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint . --ext ts --ext tsx"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
